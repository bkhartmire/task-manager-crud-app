<h1>Ready to get shit done,  <%= current_user.username%>?</h1>
<a href="/tasks/new">Add Task</a> <a href="/logout">Log Out</a>
<%#insert Ben here%>

<ol><h3>Urgent Tasks:</h3>
  <%urgent_tasks = current_user.tasks.find_all{|task| task.urgency == "urgent"}%>
  <%if !urgent_tasks.empty?%>
    <%urgent_tasks.each do |task|%>
      <li><%=task.name%>
        <br></br>
        <a href="/tasks/#{task.id}/edit">Edit</a><a href="/tasks/#{task.id}/delete">Mark Complete</a>
      </li>
    <%end%>
  <%else%>
    <h5>You have no urgent tasks.</h5>
  <%end%>
</ol>

